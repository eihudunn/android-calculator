<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- Display TextView -->
    <TextView
        android:id="@+id/resultTextView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintVertical_weight="2"
        android:text="0"
        android:textSize="60sp"
        android:background="#e1e1e1"
        android:textColor="@android:color/black"
        android:gravity="end|center_vertical"
        android:padding="16dp"
        android:layout_margin="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/buttonCE"
        app:layout_constraintHeight_percent="0.4"
        />

    <!-- Row 1: CE, C, BS, / -->
    <Button
        android:id="@+id/buttonCE"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="CE"
        android:layout_marginHorizontal="3dp"
        android:backgroundTint="#dedede"
        android:textSize="20sp"
        android:textColor="@color/black"
        app:cornerRadius="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/buttonC"
        app:layout_constraintTop_toBottomOf="@id/resultTextView"
        app:layout_constraintWidth_percent="0.23"
        app:layout_constraintHeight_percent="0.12" />

    <Button
        android:id="@+id/buttonC"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="C"
        android:layout_marginHorizontal="3dp"
        android:backgroundTint="#dedede"
        android:textSize="20sp"
        android:textColor="@color/black"
        app:cornerRadius="0dp"
        app:layout_constraintStart_toEndOf="@id/buttonCE"
        app:layout_constraintEnd_toStartOf="@id/buttonBS"
        app:layout_constraintTop_toBottomOf="@id/resultTextView"
        app:layout_constraintWidth_percent="0.23"
        app:layout_constraintHeight_percent="0.12" />

    <Button
        android:id="@+id/buttonBS"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="BS"
        android:layout_marginHorizontal="3dp"
        android:backgroundTint="#dedede"
        android:textSize="20sp"
        android:textColor="@color/black"
        app:cornerRadius="0dp"
        app:layout_constraintStart_toEndOf="@id/buttonC"
        app:layout_constraintEnd_toStartOf="@id/buttonDivide"
        app:layout_constraintTop_toBottomOf="@id/resultTextView"
        app:layout_constraintWidth_percent="0.23"
        app:layout_constraintHeight_percent="0.12" />

    <Button
        android:id="@+id/buttonDivide"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="/"
        android:layout_marginHorizontal="3dp"
        android:backgroundTint="#dedede"
        android:textSize="20sp"
        android:textColor="@color/black"
        app:cornerRadius="0dp"
        app:layout_constraintStart_toEndOf="@id/buttonBS"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/resultTextView"
        app:layout_constraintWidth_percent="0.23"
        app:layout_constraintHeight_percent="0.12" />

    <!-- Row 2: 7, 8, 9, * -->
    <Button
        android:id="@+id/button7"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="7"
        android:layout_marginHorizontal="3dp"
        android:backgroundTint="#efefef"
        android:textSize="20sp"
        android:textColor="@color/black"
        app:cornerRadius="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/button8"
        app:layout_constraintTop_toBottomOf="@id/buttonCE"
        app:layout_constraintWidth_percent="0.23"
        app:layout_constraintHeight_percent="0.12" />

    <Button
        android:id="@+id/button8"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="8"
        android:layout_marginHorizontal="3dp"

        android:backgroundTint="#efefef"
        android:textSize="20sp"
        android:textColor="@color/black"
        app:cornerRadius="0dp"
        app:layout_constraintStart_toEndOf="@id/button7"
        app:layout_constraintEnd_toStartOf="@id/button9"
        app:layout_constraintTop_toBottomOf="@id/buttonC"
        app:layout_constraintWidth_percent="0.23"
        app:layout_constraintHeight_percent="0.12" />

    <Button
        android:id="@+id/button9"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="9"
        android:layout_marginHorizontal="3dp"
        android:backgroundTint="#efefef"
        android:textSize="20sp"
        android:textColor="@color/black"
        app:cornerRadius="0dp"
        app:layout_constraintStart_toEndOf="@id/button8"
        app:layout_constraintEnd_toStartOf="@id/buttonMultiply"
        app:layout_constraintTop_toBottomOf="@id/buttonBS"
        app:layout_constraintWidth_percent="0.23"
        app:layout_constraintHeight_percent="0.12" />

    <Button
        android:id="@+id/buttonMultiply"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="x"
        android:layout_marginHorizontal="3dp"
        android:backgroundTint="#dedede"
        android:textSize="20sp"
        android:textColor="@color/black"
        app:cornerRadius="0dp"
        app:layout_constraintStart_toEndOf="@id/button9"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/buttonDivide"
        app:layout_constraintWidth_percent="0.23"
        app:layout_constraintHeight_percent="0.12" />

    <!-- Row 3: 4, 5, 6, - -->
    <Button
        android:id="@+id/button4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="4"
        android:layout_marginHorizontal="3dp"
        android:backgroundTint="#efefef"
        android:textSize="20sp"
        android:textColor="@color/black"
        app:cornerRadius="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/button5"
        app:layout_constraintTop_toBottomOf="@id/button7"
        app:layout_constraintWidth_percent="0.23"
        app:layout_constraintHeight_percent="0.12" />

    <Button
        android:id="@+id/button5"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="5"
        android:layout_marginHorizontal="3dp"
        android:backgroundTint="#efefef"
        android:textSize="20sp"
        android:textColor="@color/black"
        app:cornerRadius="0dp"
        app:layout_constraintStart_toEndOf="@id/button4"
        app:layout_constraintEnd_toStartOf="@id/button6"
        app:layout_constraintTop_toBottomOf="@id/button8"
        app:layout_constraintWidth_percent="0.23"
        app:layout_constraintHeight_percent="0.12" />

    <Button
        android:id="@+id/button6"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="6"
        android:layout_marginHorizontal="3dp"
        android:backgroundTint="#efefef"
        android:textSize="20sp"
        android:textColor="@color/black"
        app:cornerRadius="0dp"
        app:layout_constraintStart_toEndOf="@id/button5"
        app:layout_constraintEnd_toStartOf="@id/buttonMinus"
        app:layout_constraintTop_toBottomOf="@id/button9"
        app:layout_constraintWidth_percent="0.23"
        app:layout_constraintHeight_percent="0.12" />

    <Button
        android:id="@+id/buttonMinus"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="-"
        android:layout_marginHorizontal="3dp"
        android:backgroundTint="#dedede"
        android:textSize="20sp"
        android:textColor="@color/black"
        app:cornerRadius="0dp"
        app:layout_constraintStart_toEndOf="@id/button6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/buttonMultiply"
        app:layout_constraintWidth_percent="0.23"
        app:layout_constraintHeight_percent="0.12" />

    <!-- Row 4: 1, 2, 3, + -->
    <Button
        android:id="@+id/button1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="1"
        android:layout_marginHorizontal="3dp"
        android:backgroundTint="#efefef"
        android:textSize="20sp"
        android:textColor="@color/black"
        app:cornerRadius="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/button2"
        app:layout_constraintTop_toBottomOf="@id/button4"
        app:layout_constraintWidth_percent="0.23"
        app:layout_constraintHeight_percent="0.12" />

    <Button
        android:id="@+id/button2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="2"
        android:layout_marginHorizontal="3dp"
        android:backgroundTint="#efefef"
        android:textSize="20sp"
        android:textColor="@color/black"
        app:cornerRadius="0dp"
        app:layout_constraintStart_toEndOf="@id/button1"
        app:layout_constraintEnd_toStartOf="@id/button3"
        app:layout_constraintTop_toBottomOf="@id/button5"
        app:layout_constraintWidth_percent="0.23"
        app:layout_constraintHeight_percent="0.12" />

    <Button
        android:id="@+id/button3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="3"
        android:layout_marginHorizontal="3dp"
        android:backgroundTint="#efefef"
        android:textSize="20sp"
        android:textColor="@color/black"
        app:cornerRadius="0dp"
        app:layout_constraintStart_toEndOf="@id/button2"
        app:layout_constraintEnd_toStartOf="@id/buttonPlus"
        app:layout_constraintTop_toBottomOf="@id/button6"
        app:layout_constraintWidth_percent="0.23"
        app:layout_constraintHeight_percent="0.12" />

    <Button
        android:id="@+id/buttonPlus"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="+"
        android:layout_marginHorizontal="3dp"
        android:backgroundTint="#dedede"
        android:textSize="20sp"
        android:textColor="@color/black"
        app:cornerRadius="0dp"
        app:layout_constraintStart_toEndOf="@id/button3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/buttonMinus"
        app:layout_constraintWidth_percent="0.23"
        app:layout_constraintHeight_percent="0.12" />

    <!-- Row 5: +/-, 0, = -->
    <Button
        android:id="@+id/buttonSign"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="+/-"
        android:layout_marginHorizontal="3dp"
        android:backgroundTint="#dedede"
        android:textSize="20sp"
        android:textColor="@color/black"
        app:cornerRadius="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/button0"
        app:layout_constraintTop_toBottomOf="@id/button1"
        app:layout_constraintWidth_percent="0.23"
        app:layout_constraintHeight_percent="0.12" />

    <Button
        android:id="@+id/button0"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="0"
        android:layout_marginHorizontal="3dp"
        android:backgroundTint="#efefef"
        android:textSize="20sp"
        android:textColor="@color/black"
        app:cornerRadius="0dp"
        app:layout_constraintStart_toEndOf="@id/buttonSign"
        app:layout_constraintEnd_toStartOf="@id/buttonDot"
        app:layout_constraintTop_toBottomOf="@id/button2"
        app:layout_constraintWidth_percent="0.23"
        app:layout_constraintHeight_percent="0.12" />

    <Button
        android:id="@+id/buttonDot"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="."
        android:layout_marginHorizontal="3dp"
        android:backgroundTint="#dedede"
        android:textSize="20sp"
        android:textColor="@color/black"
        app:cornerRadius="0dp"
        app:layout_constraintStart_toEndOf="@id/button0"
        app:layout_constraintEnd_toStartOf="@id/buttonEqual"
        app:layout_constraintTop_toBottomOf="@id/button3"
        app:layout_constraintWidth_percent="0.23"
        app:layout_constraintHeight_percent="0.12" />

    <Button
        android:id="@+id/buttonEqual"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="="
        android:layout_marginHorizontal="3dp"
        android:backgroundTint="#dedede"
        android:textSize="20sp"
        android:textColor="@color/black"
        app:cornerRadius="0dp"
        app:layout_constraintStart_toEndOf="@id/buttonDot"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button3"
        app:layout_constraintWidth_percent="0.23"
        app:layout_constraintHeight_percent="0.12" />


</androidx.constraintlayout.widget.ConstraintLayout>
